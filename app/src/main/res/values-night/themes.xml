<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OsuHalaPharmacyApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <!--status bar color-->
        <item name="android:statusBarColor">@color/darkBlue</item>
        <item name="textFillColor">@color/black</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--shop-->
    <style name="searchViewBackground">
        <item name="android:background">@drawable/custom_shape_black_rectangle_corner_round</item>
    </style>

    <style name="shopCategoryButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:backgroundTint">@color/darkBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10dp</item>
    </style>

    <!--main background-->
    <color name="backgroundColor">#FDFDFD</color>

    <!--main topic of window-->
    <style name="topicOfWindow">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:fontFamily">@font/jua</item>
        <item name="android:textSize">38dp</item>
        <item name="android:textColor">#4D4D4D</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--bottom nav bar-->
    <style name="bottomNavBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">-5dp</item>
        <item name="android:layout_marginRight">-5dp</item>
        <!--<item name="android:background">@drawable/light_blue_rectangle_corner_50</item>-->
        <item name="android:background">@drawable/custom_rectangle_dark_blue_corner_50</item>
        <item name="android:isScrollContainer">false</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="bottomNavBarIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">10</item>
        <item name="android:padding">15sp</item>
    </style>

    <!--topics - dark blue background, white letters-->
    <style name="subTopicStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custome_shapes_dark_blue_rectangle_for_buttons</item>
    </style>

    <!--topics - dark blue stroke with white background, black letters-->
    <style name="subTopicStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!--topics - light gray background, black letters-->
    <style name="subTopicStyle3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@drawable/custom_shape_light_gray_rectangle_with_opacity</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--topics - white letters, black background-->
    <style name="subTopicStyle4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/custom_shape_black_rectangle_corner</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--scroll bar-->
    <style name="scrollBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginBottom">65dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="linearLayoutScrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linearLayoutStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/custome_stroke</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="imageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="smallTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#4D4D4D</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="userInputBarStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/custom_shape_darkblue_rectangle_opacity_and_corner</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textColorHint">@color/darkBlue</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="backgroundTint">#000000</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--dashboard-->
    <style name="dashboardCommonCategoriesLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="dashboardCommonCategoriesImageStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="dashboardCommonCategoriesTextStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkDarkGray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dashboardButtonStyle">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@drawable/custom_rectangle_black_with_corner_15</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>